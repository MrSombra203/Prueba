# Sass Configuration
# Este archivo contiene la configuración para el compilador Sass

# Rutas de entrada y salida
input: styles/styles.scss
output: styles/styles.css

# Estilo de salida (nested, expanded, compact, compressed)
style: expanded

# Incluir source maps para debugging
source-map: true

# Precisión para números decimales
precision: 5

# Codificación de caracteres
charset: utf-8

# Incluir comentarios en el CSS compilado
comments: true
